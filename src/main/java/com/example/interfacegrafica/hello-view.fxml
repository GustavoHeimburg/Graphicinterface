<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import com.example.interfacegrafica.Controller?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.interfacegrafica.Controller">

    <children>
        <Label text="Altura (em metros):"/>
        <TextField fx:id="txtAltura" onKeyReleased="#calcularPeso"/>
        <Label fx:id="lblPesoIdeal"/>
        <Button text="Verificar Peso" onAction="#verificarPeso"/>
    </children>
</VBox>

