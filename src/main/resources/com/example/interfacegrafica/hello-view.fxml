<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.interfacegrafica.Calc">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="welcomeText" text="Digite uma opção: 1+ 2- 3* 4/"/>
    <ChoiceBox fx:id="operationChoice">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="+" />
                <String fx:value="-" />
                <String fx:value="*" />
                <String fx:value="/" />
            </FXCollections>
        </items>
    </ChoiceBox>
    <Label text="Digite o primeiro número:"/>
    <TextField fx:id="number1Field"/>
    <Label text="Digite o segundo número:"/>
    <TextField fx:id="number2Field"/>
    <Button text="Calcular">
        <onAction>#Calc</onAction>
    </Button>
    <Label fx:id="resultLabel"/>
</VBox>
